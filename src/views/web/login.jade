doctype html
html(lang='zh-CN')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='../../favicon.ico')
    title 图书管理系统
    link(href='/web/css/bootstrap.min.css', rel='stylesheet')
    link(href='/web/css/web.css', rel='stylesheet')
  body
    nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') 图书管理系统
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='#') 关于   
                  
    .container-fluid
      .row
        .col-md-4.col-md-offset-4
          h1.text-center.web-title 图书管理系统
          .panel.panel-default
            form(role='form' method="post" action="/admin/login")
              .panel-heading
                h3.panel-title 管理员登录
              .panel-body
                  label(for='username') 用户名
                  input#username.form-control(type='text' name='username')
                  label(for='password') 密码
                  input#password.form-control(type='password' name='password')
              .panel-footer.text-right
                button.btn.btn-success(type='submit') 登录
            
        block content

    script(src='/web/js/jquery.min.js')
    script(src='/web/js/bootstrap.min.js')
      
    block footer
